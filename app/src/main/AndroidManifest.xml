<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="asistencia.app" >

    <uses-sdk
        android:minSdkVersion="8"
        android:maxSdkVersion="15"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="asistencia.app.PantallaInicio"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="asistencia.app.ActividadPrincipal"
            android:label="Control asistencias" />
        <activity
            android:name="asistencia.app.AcercaDe"
            android:label="Acerca de" />
        <activity
            android:name="asistencia.app.MenuAsignatura"
            android:label="Menú eventos" />
        <activity
            android:name="asistencia.app.ListaAlumnos"
            android:label="Asistentes" />
        <activity
            android:name="asistencia.app.MarcadoAsistencia"
            android:label="Sesión" />
        <activity
            android:name="asistencia.app.ListaAsignaturas"
            android:label="Ver eventos" />
        <activity
            android:name="asistencia.app.IntroAsignaturas"
            android:label="Nuevo evento" />
        <activity
            android:name="asistencia.app.capturaImagen"
            android:label="Dar de alta" />

    </application>

</manifest>
